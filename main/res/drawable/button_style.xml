<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#666666" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>

        <!--pressed-->

    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="#00FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#F3AA51" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>
        <!--foused-->

    <item>
        <shape>
            <solid
                android:color="#00FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#F3AA51" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>
        <!--default-->
</selector>